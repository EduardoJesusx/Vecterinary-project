= form_with(model: animal) do |form|
  - if animal.errors.any?
    %div{style: "color: red"}
      %h2= pluralize(animal.errors.count, "error") + " prohibited this animal from being saved:"
      %ul
        - animal.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :observation, style: "display: block"
    = form.text_area :observation
  %div
    = form.label :pet_owner_id, style: "display: block"
    = form.collection_select :pet_owner_id, PetOwner.all, :id, :first_name
  %div
    = form.submit