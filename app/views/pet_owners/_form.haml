= form_with(model: pet_owner) do |form|
  - if pet_owner.errors.any?
    %div{ style: "color: red" }
      %h2= pluralize(pet_owner.errors.count, "error") + " prohibited this pet_owner from being saved:"

      %ul
        - pet_owner.errors.each do |error|
          %li= error.full_message

  %div
    = form.label :first_name, style: "display: block"
    = form.text_field :first_name

  %div
    = form.label :last_name, style: "display: block"
    = form.text_field :last_name

  %div
    = form.label :email, style: "display: block"
    = form.text_field :email

  %div
    = form.label :cell_number, style: "display: block"
    = form.text_field :cell_number

  %div
    = form.submit
